<%- include('partials/header'); -%>
<% const currentYear=new Date().getFullYear(); %>
<main class="form-signin">
    <form action="/register" method="post">
      <img class="mb-4" src="pics/She Exists Logo-PNG (1).png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Please Register</h1>
        <div class="errorMessage"><%=errorMessage %></div>
      <div class="form-floating">
        <input type="text" name="name" class="form-control" id="floatingInput" placeholder="Janelle Harris">
        <label for="floatingInput">Full Name</label>
      </div>
      <div class="form-floating">
        <input type="text" name="country" class="form-control" id="floatingInput" placeholder="USA">
        <label for="floatingInput">Country</label>
      </div>
      <div class="form-floating">
        <input type="email" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Username (Email Address)</label>
      </div>
      
      <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
  
     
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <!-- <p class="mt-5 mb-3 text-muted">&copy; 2017â€“ <%=currentYear %></p> -->
    </form>
    <br>
    <form action="/login" method="get">
      <div class="error1">I already have an account?<span><button type="submit" class="" id="error">Login</button></span></div>
    </form>
  </main>
  <%- include('partials/footer'); -%>