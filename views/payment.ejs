<%- include('partials/header'); -%>
<% const currentYear=new Date().getFullYear(); %>
<main class="form-signin">
    <h1>PAYMENT</h1>
    <form action="/create-checkout-session" method="post">
      <img class="mb-4" src="pics/She Exists Logo-PNG (1).png" alt="" width="72" height="57">
      <main>SheExist Magazine </main>
      <h1 class="h3 mb-3 fw-normal">Please Make a Payment</h1>
  
      <div class="form-floating">
        <input type="hidden" name="username" class="form-control" id="floatingInput" value=<%= username %> />
       
      </div>
      <input type="hidden" name="price" value=<%=price %> />
      
  
     
      <button class="w-100 btn btn-lg btn-primary" type="submit">Buy  $<%= price %></button>
      <!-- <p class="mt-5 mb-3 text-muted">&copy; 2017â€“ <%=currentYear %></p> -->
    </form>
  </main>
