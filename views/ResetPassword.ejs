<%- include('partials/header'); -%>
<% const currentYear=new Date().getFullYear(); %>
<main class="form-signin">
    <img class="mb-4" src="pics/She Exists Logo-PNG (1).png" alt="" width="72" height="57">
    <form action="/resetpassword" method="post">
      
      <h1 class="h3 mb-3 fw-normal">Please Reset Your Password</h1>
        
      
      
      <div class="form-floating">
        <input type="email" name="username" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Username (Email Address)</label>
      </div>
      
      <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>
